#!/bin/bash

}

dims() {
  if [ "$#" -ne 1 ]; then
      echo "Incorrect number of arguments. Expected 1, got $#. Please provide 1 matrix."
      exit 1
  fi
  echo "DIMS"
}

transpose() {
  if [ "$#" -ne 1 ]; then
      echo "Incorrect number of arguments. Expected 1, got $#. Please provide 1 matrix."
      exit 1
  fi
  echo "TRANS"
}

mean() {
  if [ "$#" -ne 1 ]; then
      echo "Incorrect number of arguments. Expected 1, got $#. Please provide 1 matrix."
      exit 1
  fi
  echo "MEAN"
}

add() {
  if [ "$#" -ne 2 ]; then
      echo "Incorrect number of arguments. Expected 2, got $#. Please provide 2 matrices."
      exit 1
  fi
  echo "ADD"
}

multiply() {
  if [ "$#" -ne 2 ]; then
      echo "Incorrect number of arguments. Expected 2, got $#. Please provide 2 matrices."
      exit 1
  fi
  echo "MULT"
}

###MAIN###

case "$1" in
    dims|d)
      dims "${@:2}"
      ;;
    transpose|t)
        transpose "${@:2}"
        ;;
    mean|m)
        mean "${@:2}"
        ;;
    add|a)
        add "${@:2}"
        ;;
    multiply|M)
        multiply "${@:2}"
        ;;
    help|h)
        echo $"Usage: $0 {dims|transpose|mean|add|multiply}"
        exit 0
        ;;
    *)
        echo $"Usage: $0 {dims|transpose|mean|add|multiply}"
        exit 1
esac
